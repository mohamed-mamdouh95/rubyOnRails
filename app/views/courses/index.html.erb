<h1> searching for <%=@search_term%> </h1>
<% if @courses.nil? %>
<p> Sorry no courses found... </p>
<% else %>
<table border="1">
	<tr>
		<th>Images</th>
		<th>Names</th>
		<th>Description</th>
	</tr>
	<% @courses.each do|course| %>
	<tr class = <%= cycle('even','odd')%>>
	   <td> <%= image_tag(course["smallIcon"]) %> </td>
       <td> <%= course["name"] %> </td>
       <td> <%= course["shortDescription"] %> </td>
   </tr>
   <%end%>
</table>
<%end%>